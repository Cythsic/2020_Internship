
.uni-media-list-body{height: auto;}
.uni-media-list-text-top{line-height: 1.6em;}
.Video{width: 100%;border-bottom: 1px solid #09BB07;}
.Video ._p{text-align: center;font-size: 1.6em;}
.content{background: #F5F7FA;}
.Flow-content{width: 100%;height: 454rpx;background: -webkit-linear-gradient(top, #C30F23 , #DF5D4E);background: linear-gradient(to bottom, #C30F23 , #DF5D4E);position: relative;}
.Flow{width: 662rpx;height: 394rpx;	position: relative;top: 6rpx;left: 12rpx;}
.Flow .Flowimg{width: 100%;height: 100%;}
.hotsell{width: 720rpx;position: relative;left: 15rpx;top: -42rpx;background: #fff;border-radius:18rpx;overflow: hidden;}
.hotsellTitle,.hotRecommendTitle{overflow: hidden;position: relative;height: 96rpx;}
.hotsellTitle .hotsellimg,.hotRecommendTitle .hotRecommendimg{display: inline-block;position: relative;top: 40rpx;left: 60rpx;width: 10rpx;height:24rpx;}
.hotsellTitletext,.hotRecommendTitletext{font-size: 32rpx;color: #C30F23;position: relative;left: 88rpx;top: 36rpx;font-weight: 600;}
/* 热销保险 */
.insure{position: relative;display: inline-block;padding-bottom: 40rpx;}
.insureContent{width: 80rpx;position: relative;top: 28rpx;bottom: 28rpx;display: inline-block;}
.insureContent .insureImg{width:80rpx;height: 80rpx;float: left;}
.insureContent text{font-size: 24rpx;line-height: 24rpx;width: 80rpx;text-align: center;float: left;display: inline-block;}
.active{margin: 0 50rpx;}
.otheractive{margin: 0 80rpx;}
/* 热门推荐 */
.hotRecommend{width: 720rpx;left:15rpx;position: relative;top: -18rpx;background: #fff;border-radius:18rpx;padding-bottom: 40rpx;}
.hotRecommendTitleimg{width: 690rpx;height: 344rpx;left: 15rpx;position: relative;}
.hotRecommendTitleImg{width: 100%;height: 100%;}
.hotRecommendContent{padding-bottom: 28rpx;}
.hotRecommendProduct{width: 690rpx;height: 192rpx;left: 15rpx;position: relative;}
.Productcontent{display: inline-block;width:390rpx;height: 192rpx;position: relative;left: 15rpx}
.Productcontent text:first-child{font-size: 32rpx;height: 32rpx;line-height: 32rpx;width: 350rpx;overflow: hidden;text-overflow: ellipsis; white-space:nowrap;display:block;color: #777777;margin: 16rpx 0 0 45rpx;font-weight:600;}
.Productcontent text:last-child{font-size: 24rpx;width: 340rpx;line-height: 32rpx;height:100rpx;text-overflow: ellipsis; word-break: break-word;white-space:normal;overflow: hidden;display:block;color: #BBBBBB;margin: 20rpx 0 0 45rpx;}
.ProductcontentRight{display: inline-block;width:300rpx;height: 192rpx;float: right;}
.ProductcontentRightimg{width: 118rpx;height: 40rpx;margin: 10rpx 18rpx 0 0;float: right;}
.ProductcontentRightimg text{font-size: 32rpx;height: 40rpx;color: #fff;line-height: 40rpx;width: 118rpx;text-align: center;display: inline-block;float: right;}
.ProductcontentRightprice{width: 240rpx;height: 32rpx;float: right;margin-top: 74rpx;}
.ProductcontentRightprice text{font-size: 32rpx;height: 32rpx;text-align: right;float: right;line-height: 32rpx;}
.price{color: #C30F23;}
/* 分界线 */
.lineContent{height:40rpx;width: 100%;text-align: center;}
.lineContent text{font-weight: 600;line-height: 40rpx;height: 40rpx;color: #eeeeee;}
/* 加载 */
.loading-text{
	height: 80rpx;
	line-height: 80rpx;
	font-size: 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
}

